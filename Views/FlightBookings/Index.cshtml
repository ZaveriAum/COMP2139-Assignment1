@model IEnumerable<COMP2139_Assignment1.Models.FlightBooking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
               Flight
            </th>
            <th>
                PassengerName
            </th>
            <th>
               PassportNumber
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.Airline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportNumber)
            </td>
            <td>
                <a asp-controller="FlightBookings" class="bttn button-one w-125" asp-route-id="@item.Id" asp-action="Edit">Edit Booking</a>

                <a asp-controller="FlightBookings" class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Cancel Booking</a>

            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class="bttn button-one" asp-action="Create" asp-route-flightId="@ViewData["FlightId"]">Create a Flight Booking!</a>
</p>
