@model COMP2139_Assignment1.Models.FlightBooking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FlightBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{if (ViewBag.ShowAlert)
        {
            <script>alert("There are no more seats")</script>
        }
        else{
        <form asp-action="Create" asp-route-flightId="@ViewData["FlightId"]">
            <input type="hidden" asp-for="FlightId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <input asp-for="PassengerName" class="form-control" />
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportNumber" class="control-label"></label>
                <input asp-for="PassportNumber" class="form-control" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-primary" />

            </div>
        </form>
        }}
        <div class="form-group">
            <a asp-controller="Flights" asp-action="Index" class="btn btn-info">Back to Search</a>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
