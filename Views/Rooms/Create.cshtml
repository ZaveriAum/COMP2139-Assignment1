@model COMP2139_Assignment1.Models.Room

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Room</h1>

<hr />
<div class="row center-screen">
        <form asp-action="Create" class="d-flex flex-column col col-md-3 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-column">
                <label asp-for="Description" class="control-label mt-3"></label>
                <textarea asp-for="Description" class="input-one input-desc"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Price" class="control-label mt-3"></label>
                <input asp-for="Price" class="input-one" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @Html.HiddenFor(mode => mode.HotelId)
            <div class="form-group mt-3 center-screen">
                <input type="submit" value="Create" class="bttn button-one w-250" />
            <a class="bttn button-two w-250 mt-3" href="javascript:history.go(-1)">Back to List</a>
            </div>
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
