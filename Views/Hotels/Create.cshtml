@model COMP2139_Assignment1.Models.Hotel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-danger center-screen">Create Hotel</h1>

<hr />
<div class="center-screen">
        <form asp-action="Create" class="d-flex flex-column col col-md-3 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class ="d-flex flex-column">
                <label asp-for="HotelName" class="control-label mt-3"></label>
                <input asp-for="HotelName" class="input-one " />
                <span asp-validation-for="HotelName" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="HotelLocation" class="control-label mt-3"></label>
                <input asp-for="HotelLocation" class="input-one col-12 " />
                <span asp-validation-for="HotelLocation" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Rating" class="control-label mt-3"></label>
                <input asp-for="Rating" class="input-one" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Description" class="control-label mt-3"></label>
                <textarea asp-for="Description" class="input-one input-desc" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 center-screen">
                <input type="submit" value="Create" class="bttn button-one w-250" />
                <a class="bttn button-two w-250 mt-3" href="javascript:history.go(-1)">Back to List</a>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
