@model COMP2139_Assignment1.Models.Car

@{
    ViewData["Title"] = "ListCar";
}

<h1 class="text-center">List A Car</h1>

<hr />
    <div class=" center-screen">
    <form asp-action="Create" class="d-flex flex-column col col-md-3 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="d-flex flex-column">
            <label asp-for="PlateNumber" class="control-label mt-3"></label>
            <input asp-for="PlateNumber" class="input-one col-12 " />
            <span asp-validation-for="PlateNumber" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="Brand" class="control-label mt-3"></label>
            <input asp-for="Brand" class="input-one" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="Model" class="control-label mt-3"></label>
            <input asp-for="Model" class="input-one" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="Description" class="control-label mt-3"></label>
            <textarea asp-for="Description" class="input-one input-desc"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="City" class="control-label mt-3"></label>
            <input asp-for="City" class="input-one" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="PickUpLocation" class="control-label mt-3"></label>
            <input asp-for="PickUpLocation" class="input-one" />
            <span asp-validation-for="PickUpLocation" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="Price" class="control-label mt-3"></label>
            <input asp-for="Price" class="input-one" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="MaxPassenger" class="control-label mt-3"></label>
            <input asp-for="MaxPassenger" class="input-one" />
            <span asp-validation-for="MaxPassenger" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="RentalCompany" class="control-label mt-3"></label>
            <input asp-for="RentalCompany" class="input-one" />
            <span asp-validation-for="RentalCompany" class="text-danger"></span>
        </div>

        <div class="form-group mt-3 center-screen">
            <input type="submit" value="List Car" class="bttn button-one w-250" /> 
            <a class="bttn button-two w-250 mt-3" href="javascript:history.go(-1)">Back to List</a>

        </div>
    </form>
        
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
