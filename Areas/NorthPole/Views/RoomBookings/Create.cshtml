@model RoomBooking

@{
    ViewData["Title"] = "Add Booking";
}


<h1>Book the Room</h1>
<h4>@ViewData["Description"]</h4>
<hr />
    <p>
        Are you Sure you want to Book the room with Rating @ViewData["Rating"] and Price @ViewData["Price"].
    </p>
    <p>If you are sure you want to book this room please enter the following information and press Confirm</p>
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.RoomId)
            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId"/>
            <div class="form-group">
                <label asp-for="BookedStartDate" class="control-label"></label>
                <input asp-for="BookedStartDate" class="form-control" />
                <span asp-validation-for="BookedStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookedEndDate" class="control-label"></label>
                <input asp-for="BookedEndDate" class="form-control" />
                <span asp-validation-for="BookedEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="bttn button-one w-250 mt-2" />
                <a asp-controller="RoomBookings" asp-action="Search" asp-route-RoomId="@ViewData["RoomId"]" class="bttn button-two w-250 mt-2">Check Booking Availibility</a>
                <a href='javascript:history.go(-1)' class="bttn button-three w-250 mt-2">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
