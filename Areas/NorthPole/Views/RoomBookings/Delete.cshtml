@model RoomBooking

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RoomBooking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookedStartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookedStartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookedEndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookedEndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.Description)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancel Booking" class="bttn button-one mt-2 w-250" />
        <a asp-action="Search" asp-route-RoomId="@Model.RoomId"  class="bttn button-two mt-2 w-250">Go Back</a>
    </form>
</div>
