 @model CarReview

@{
    ViewData["Title"] = "Leave Review";
}


<div class="h-70v center-screen">

    <h1 class="text-center">Leave a Review</h1>
    <form asp-action="Create" class="d-flex flex-column col col-md-3 mx-auto">
        <input type="hidden" asp-for="CarId" value="@ViewBag.carId" />
        <input type="hidden" asp-for="UserId" value="@ViewBag.userId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="d-flex flex-column">
            <label asp-for="Rating" class="control-label mt-3"></label>
            <input asp-for="Rating" type="range" id="rating" name="rating" min="0" max="10" onchange="updateSliderValue()" />
            <span id="sliderValue" class="ml-2">5/10</span>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="Comment" class="control-label mt-3"></label>
            <textarea asp-for="Comment" class="input-one h-30v input-desc"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <p class="text-center mt-3">Send as anonymous?</p>
            <input asp-for="isAnonymous" type="checkbox" id="Anonymous" name="isAnonymous" />
            <span asp-validation-for="isAnonymous" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 center-screen">
            <input type="submit" value="Post Review" class="bttn button-one w-250" />
            <a class="bttn button-two w-250 mt-3" href="javascript:history.go(-1)">Back to Reviews</a>
        </div>
    </form>

</div>

<script src="~/js/CreateReview.js"></script>