@model Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxGuest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxGuest)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hotel.HotelName)
        </dd>
    </dl>
</div>
<div>

    <a href ='javascript:history.go(-1)' class="bttn button-two ms-2">
        Back to List</a> 
         @if (User.IsInRole("Admin"))
    {
        <a asp-action="Delete" class="bttn button-danger" asp-route-roomId="@Model?.RoomId">Delete</a>
        <a asp-action="Edit" asp-route-hotelId="@Model?.HotelId" class="bttn button-one">Edit</a>
    }
</div>
