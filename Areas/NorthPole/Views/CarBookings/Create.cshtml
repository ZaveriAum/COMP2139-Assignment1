@model CarBooking

@{
    ViewData["Title"] = "Add Booking";
}

<h1>Book @ViewData["Brand"] @ViewData["Model"], license plate @ViewData["PlateNumber"] </h1>

<h4>Car</h4>
<hr />
<div class="row">
    <p>
        Are you sure you want to Book the car with License plate @ViewData["PlateNumber"] in @ViewData["City"]. This car is a @ViewData["Brand"] @ViewData["Model"], and is being rented out by
        @ViewData["RentalCompany"] at a price of $@ViewData["Price"] per day.
    </p>
    <p>If you are sure you want to book this car please enter the following information and press Confirm</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-CarId="@ViewData["CarId"]">
            <input type="hidden" asp-for="CarId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookedStartDate" class="control-label"></label>
                <input type="date" asp-for="BookedStartDate" class="form-control" />
                <span asp-validation-for="BookedStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookedEndDate" class="control-label"></label>
                <input type="date" asp-for="BookedEndDate" class="form-control" />
                <span asp-validation-for="BookedEndDate" class="text-danger"></span>
            </div>
            <div class="w-100 d-flex flex-column">
                <input type="submit" value="Confirm" class="bttn button-one w-250 mt-2" />
                <a asp-area="NorthPole" asp-controller="CarBookings" asp-action="Search" asp-route-CarId="@ViewData["CarId"]" class="bttn button-two w-250 mt-2">Check booking availibility</a>
                <a href='javascript:history.go(-1)' class="bttn button-three w-250 mt-2">Back to List</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

